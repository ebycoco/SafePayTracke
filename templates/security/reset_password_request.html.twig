        <link rel="manifest" href="{{asset("favicon_io/site.webmanifest")}}">

		<link href="{{asset('assets/css/login/bootstrap.min.css')}}" rel="stylesheet" type="text/css">
		<link href="{{asset('assets/css/login/metismenu.min.css')}}" rel="stylesheet" type="text/css">
		<link href="{{asset('assets/css/login/icons.css')}}" rel="stylesheet" type="text/css">
		<link href="{{asset('assets/css/login/style.css')}}" rel="stylesheet" type="text/css">
	</head>

	<body class="bg-primary">
		<div class="home-btn d-none d-sm-block">
			<a href="index.html" class="text-white">
				<i class="fas fa-home h2"></i>
			</a>
		</div>

		<div class="account-pages my-5 pt-5">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-8 col-lg-6 col-xl-5">
						<div class="card bg-pattern shadow-none">
							<div class="card-body">
								<div class="text-center mt-4">
									<div class="mb-3">
										<a href="index.html" class="logo"><img src="{{asset('img/employee.png')}}" height="50" alt="logo"></a>
									</div>
								</div>
								<div class="p-3">
									{% for flashError in app.flashes('reset_password_error') %}
										<div class="alert alert-danger" role="alert">{{ flashError }}</div>
									{% endfor %}
									<h4 class="font-18 text-center">réinitialiser le mot de passe</h4>
									<div class="alert alert-success mt-4 mb-5 text-center" role="alert">
										Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
									</div>
									{{ form_start(requestPassForm, {label_attr: {class: 'form-horizontal'} }) }}

									<div class="form-group">
										{{ form_row(requestPassForm.email) }}
									</div>


									<div class="form-group row">
										<div class="col-12 text-right">
											<button class="btn btn-primary w-md waves-effect waves-light" type="submit">Send password reset email</button>
										</div>
									</div>

									{{ form_end(requestPassForm) }}

								</div>

							</div>
						</div>
						<div class="mt-5 text-center text-white-50">
							<p>Souviens toi  ?
								<a href="{{path('app_login')}}" class="font-500 text-white">
									 Se connecter ici
								</a>
							</p>
							<p>© 2019 Safe Pay Tracker. Crafted with
								<i class="mdi mdi-heart text-danger"></i>
								by Ebychoco</p>
						</div>

					</div>
				</div>
			</div>
		</div>

		<!-- jQuery  -->
