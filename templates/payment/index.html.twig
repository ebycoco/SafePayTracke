{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
    <h1>Payment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MontantAPayer</th>
                <th>RecuDePaiement</th>
                <th>MontantRestant</th>
                <th>Status</th>
                <th>IsVisibilite</th>
                <th>DatePaiement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.montantAPayer }}</td>
                <td>{{ payment.recuDePaiement }}</td>
                <td>{{ payment.montantRestant }}</td>
                <td>{{ payment.status }}</td>
                <td>{{ payment.isVisibilite ? 'Yes' : 'No' }}</td>
                <td>{{ payment.datePaiement ? payment.datePaiement|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_payment_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payment_new') }}">Create new</a>
{% endblock %}
