{% if pages > 1 %}
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            {% if currentPage > 1 %}
                <li class="page-item">
                    <a href="{{ path(path, { page: currentPage - 1}) }}" class="page-link">Précédent</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Précédent</span>
                </li>
            {% endif %}
            {# Affichage des deux premiers numéros de page #}
            {% for page in range(1, min(2, pages)) %}
                <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                    <a href="{{ path(path, { page: page }) }}" class="page-link">{{ page }}</a>
                </li>
            {% endfor %}
            {# Affichage des points si nécessaire #}
            {% if currentPage > 3 %}
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            {% endif %}
            {# Affichage des numéros de page du milieu #}
            {% for page in range(max(currentPage - 1, 3), min(currentPage + 1, pages - 2)) %}
                <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                    <a href="{{ path(path, { page: page }) }}" class="page-link">{{ page }}</a>
                </li>
            {% endfor %}
            {# Affichage des points si nécessaire #}
            {% if currentPage < pages - 2 %}
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            {% endif %}
            {# Affichage des deux derniers numéros de page #}
            {% for page in range(max(pages - 1, currentPage + 1), pages) %}
                <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                    <a href="{{ path(path, { page: page }) }}" class="page-link">{{ page }}</a>
                </li>
            {% endfor %}
            {% if currentPage < pages %}
                <li class="page-item">
                    <a href="{{ path(path, { page: currentPage + 1}) }}" class="page-link">Suivant</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Suivant</span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
